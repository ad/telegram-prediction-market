# Telegram Bot Configuration
TELEGRAM_TOKEN=your_bot_token_here
GROUP_ID=your_group_id_here
ADMIN_USER_IDS=123456789,987654321

# Database
DATABASE_PATH=./data/bot.db

# Logging
LOG_LEVEL=INFO

# Timezone (IANA timezone name, e.g., Europe/Moscow for UTC+3)
TIMEZONE=UTC

# Minimum number of completed events a user must participate in before creating events
# Default: 3
MIN_EVENTS_TO_CREATE=3

# Multi-Group Configuration
# Name for the default group during migration from single-group to multi-group
# Default: "Default Group"
DEFAULT_GROUP_NAME=Default Group

# Maximum number of groups an admin can create
# Default: 10
MAX_GROUPS_PER_ADMIN=10

# Maximum number of groups a user can join
# Default: 20
MAX_MEMBERSHIPS_PER_USER=20
