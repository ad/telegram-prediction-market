# Telegram Bot Configuration
TELEGRAM_TOKEN=your_bot_token_here
GROUP_ID=your_group_id_here
ADMIN_USER_IDS=123456789,987654321

# Database
DATABASE_PATH=./data/bot.db

# Logging
LOG_LEVEL=INFO

# Timezone (IANA timezone name, e.g., Europe/Moscow for UTC+3)
TIMEZONE=UTC

# Minimum number of completed events a user must participate in before creating events
# Default: 3
MIN_EVENTS_TO_CREATE=3

# Multi-Group Configuration
# Name for the default group during migration from single-group to multi-group
# This group will be created automatically and all existing data will be associated with it
# Default: "Default Group"
DEFAULT_GROUP_NAME=Default Group

# Maximum number of groups an admin can create
# Prevents abuse and resource exhaustion
# Default: 10
MAX_GROUPS_PER_ADMIN=10

# Maximum number of groups a user can join
# Prevents abuse and ensures reasonable user experience
# Default: 20
MAX_MEMBERSHIPS_PER_USER=20

# ID Encoding Alphabet
# Alphabet used for encoding group IDs in invitation links (base-N encoding)
# This prevents enumeration attacks by making IDs non-sequential
# Default: base62 alphabet (0-9, a-z, A-Z)
# You can customize this to use any set of characters (minimum 2 unique characters)
# Example alternatives:
#   - Base36: 0123456789abcdefghijklmnopqrstuvwxyz
#   - Base58 (Bitcoin-style, no confusing chars): 123456789ABCDEFGHJKLMNPQRSTUVWXYZabcdefghijkmnopqrstuvwxyz
#   - Custom: any unique character set you prefer
ID_ENCODING_ALPHABET=0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ
